
ARG REMOTE_BASE=jessmillar/g-node-factory-base:latest
#ARG REMOTE_BASE=python:3.10

FROM $REMOTE_BASE AS app-base


WORKDIR /app

COPY ./src /app/src
COPY ./for_docker/validator_docker.env /app/.env
COPY README.md /app/README.md
RUN pip install -e /app
CMD ["uvicorn", "gwatn.ta_validator_rest_api:app", "--reload", "--host", "0.0.0.0", "--port", "8000"]
